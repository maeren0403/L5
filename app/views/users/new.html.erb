<%= form_for @user, action: :create do |f| %>
<p>  
  <%= f.label :uid, 'ユーザID' %>
  <%= f.text_field :uid  %>
  <%= f.label :password, 'パスワード' %>
  <%= f.text_field :password %>
  <%= f.submit '登録' %>
  
  <p>
    <%= f.label :password_confirmation, 'パスワード(確認)' %>
    <%= f.password_field :password_confirmation %>
  </p>
<% end %>